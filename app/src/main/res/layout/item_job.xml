<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Uploader Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="Uploader Icon"
                android:layout_marginEnd="12dp"
                app:tint="@color/teal_700" />


        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#DDD" />

        <!-- PDF Button -->
        <Button
            android:id="@+id/btn_view_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“„ View PDF"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Job Details -->
        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#000000"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/job_assignment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Description"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="4dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/job_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: â‚¹500"
            android:layout_marginTop="4dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/job_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date: 2025-06-01"
            android:layout_marginTop="4dp"
            android:textColor="#444444" />
        <Button
            android:id="@+id/btn_lock_unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Lock"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
