<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="6dp"
    android:padding="20dp"
    app:cardCornerRadius="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <!-- Top: Uploader Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="User Icon"
                android:layout_marginEnd="12dp"
                app:tint="@color/teal_700" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uploader_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploader Name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/uploader_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/uploader_reg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reg No: 123456"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/uploader_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 9876543210"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp" />

        <!-- Middle: View PDF Button -->
        <Button
            android:id="@+id/btn_view_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View PDF"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginVertical="10dp" />

        <!-- Bottom: Job Details -->
        <TextView
            android:id="@+id/job_assignment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment: Create a portfolio"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/job_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: â‚¹500"
            android:textSize="15sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/job_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due: 25 May 2025"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
